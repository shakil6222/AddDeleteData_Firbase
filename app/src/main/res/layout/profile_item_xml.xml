<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">
    <ImageView
        android:id="@+id/updateButton_ImageView"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/update"
        android:layout_marginLeft="100dp"
         />

    <ImageView
        android:id="@+id/deleteItom_ImageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="140dp"
        android:src="@drawable/delete_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/ItomProfilelist_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_party_mode_24" />
                <ImageView
                    android:layout_width="20sp"
                    android:id="@+id/frontCamera_ImggeView"
                    android:src="@drawable/baseline_add_circle_24"
                    android:layout_marginTop="35sp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="20sp"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/itemName_TextView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="Name Title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/itemvill_TextView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLength="100"
                    android:paddingLeft="10dp"
                    android:text="Message"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>